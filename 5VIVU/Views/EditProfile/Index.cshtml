@model _5VIVU.Models.UserVM

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>5VIVU Airlines Ticket Booking</title>
    <!--

    Tooplate 2095 Level

    https://www.tooplate.com/view/2095-level

    -->
    <!-- load stylesheets -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Google web font "Open Sans" -->
    <link rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css"> <!-- Bootstrap style -->
    <link rel="stylesheet" type="text/css" href="/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="/slick/slick-theme.css" />
    <link rel="stylesheet" type="text/css" href="/css/datepicker.css" />
    <link rel="stylesheet" href="/css/EditProfile.css">
    <link rel="stylesheet" href="/css/tooplate-style.css"> <!-- Templatemo style -->
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
          <![endif]-->

</head>
<body>
    <div class="tm-main-content" id="top">
        <div class="tm-top-bar-bg"></div>
        <div class="tm-top-bar" id="tm-top-bar">

            <div class="container">
                <div class="row">

                    <nav class="navbar navbar-expand-lg narbar-light">
                        <a class="navbar-brand mr-auto" href="#">
                            <img src="/img/Screenshot 2024-01-17 162311.png" alt="Site logo">
                        </a>
                        <button type="button" id="nav-toggle" class="navbar-toggler collapsed" data-toggle="collapse"
                                data-target="#mainNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div id="mainNav" class="collapse navbar-collapse tm-bg-white">
                            <ul class="navbar-nav  ">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                                        Home <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                @if (Context.Session.GetInt32("Role") == 0)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-4">Tìm Chuyến Bay</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-4">Vé Máy Bay</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-5">Blog</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-6">Liên Hệ 5VIVU</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link"><i class="fa fa-user-o" aria-hidden="true"></i></a>

                                        <ul class="sub-menu">
                                            <li>
                                                <a  asp-controller="FlightHistory" asp-action="ViewHistory"
                                                   asp-route-userId="@((int?)Context.Session.GetInt32("Id"))">xem lịch sử</a>

                                            </li>
                                            <li>
                                                <a href="#">Edit Hồ Sơ</a>
                                            </li>
                                            <li>
                                                <a href="#">Đổi Mật khẩu</a>
                                            </li>
                                            <li>
                                                <a asp-controller="Account" asp-action="Logout">
                                                    Logout
                                                </a>
                                            </li>
                                        </ul>
                                    </li>
                                }
                                else if (Context.Session.GetInt32("Role") == 1)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Tạo vé</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="FlightHistory/Index">xem lịch sử </a>
                                    </li>
                                    <ul class="navbar-nav ">
                                        <li class="nav-item">

                                            <a asp-controller="Account" asp-action="Logout" class="nav-link">
                                                <i class="fa fa-user-o"
                                                   aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-4">Tìm Chuyến Bay</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-4">Vé Máy Bay</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-5">Blog</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#tm-section-6">Liên Hệ 5VIVU</a>
                                    </li>
                                    <ul class="navbar-nav ">
                                        <li class="nav-item">
                                            <a class="nav-link" href="Account/Login">
                                                <i class="fa fa-user-o"
                                                   aria-hidden="true"></i>
                                            </a>
                                        </li>
                                    </ul>
                                }

                            </ul>
                        </div>

                    </nav>
                </div>
            </div>
        </div>
        <div>
                
                    <div class="Edit">

                        <div class="forms">

                            <div class="form-content">
                                <div class="edit-profile-form">
                                    <div class="title">Edit Profile</div>

                                        <form asp-controller="EditProfile" asp-action="SaveChanges" method="post">
                                            <div>Thông tin cá nhân</div>
                                            @if (ViewBag.SuccessMessage != null)
                                            {
                                                <div class="alert alert-success" role="alert">
                                                    @ViewBag.SuccessMessage
                                                </div>
                                            }
                                            <div class="input-boxes">
                                    <div class="input-box" style="display: none">
                                            <i class="fas fa-user"></i>
                                            <input  placeholder="FullName" required asp-for="@Model.Id" style="display: none" >
                                        </div>
                                 
                                        <div class="input-box">
                                            <i class="fas fa-user"></i>
                                     
                                        <input placeholder="FullName" required asp-for="@Model.FullName">
                                        
                                        </div>
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.FullName)</span>
                                    <div class="input-box" style="display: none">
                                            <i class="fas fa-envelope"></i>
                                        <input placeholder="Email" required asp-for="@Model.Email">
                                        </div>
                                        <div class="input-box">
                                            <i class="fas fa-birthday-cake"></i>
                                        <input type="Date" placeholder="Edit your date of birth" required asp-for="@Model.Birthday">
                                        </div>
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Birthday)</span>
                                        <div class="ttll">Thông tin liên lạc</div>
                              
                                        <div class="input-box">
                                            <i class="fa fa-phone"></i>
                  
                                        <input placeholder="Số điện thoại" required asp-for="@Model.Phone">
                                        </div>
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Phone)</span>
                                        <div class="input-box">
                                            <i class="fas fa-map-pin"></i>
                                        <input placeholder="Địa chỉ" required asp-for="@Model.Address">
                                        </div>
                                        <div class="input-box">
                                        <i class="fas fa-passport"></i>
                                        <input placeholder="CCCD/ CMND/ Hộ chiếu" required asp-for="@Model.Cmnd">
                                        </div>
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Cmnd)</span>
                                    <div class="input-box" style="display: none">
                                        <i class="fas fa-wallet"></i>
                                         
                                        <input placeholder="Wallet" required asp-for="@Model.Wallet">
                                        </div>
                                        <div class="button input-box">
                                            <input type="submit" value="Lưu">
                                        </div>
                                        <div class="button2 input-box">
                                            <input type="button" value="Xóa" onclick="window.location.href='dashboard.html';">
                                        </div>
                                            </div>
                                        </form>
                                </div>
                            </div>
                        </div>
                    </div>

        </div>
    </div>
    </div>
</body>
</html>


<style>
    ul.sub-menu {
        position: absolute;
        background-color: white;
        width: 110px;
        height: 190px;
        display: none;
        list-style: none;
        padding-left: 10px;
    }
</style>
