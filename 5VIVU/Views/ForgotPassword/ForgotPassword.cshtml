@{
    Layout = "_LayoutFP";
}
@model string
<div class="container">
    <input type="checkbox" id="flip">
    <div class="cover">
        <div class="front">
            <img src="https://scontent.fhan2-4.fna.fbcdn.net/v/t1.15752-9/432772404_1097981234794479_3876536060052007525_n.jpg?_nc_cat=110&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeGOaaKd8QqjHU63kWuXqj5OH9yC82a3Aowf3ILzZrcCjO9F905aszqK0t977H0W7q3HBrw6ucVpH_n934grBZ0-&_nc_ohc=n_lLUja3oKAAX_0PR4h&_nc_ht=scontent.fhan2-4.fna&oh=03_AdQoN8Q3PJK7thA7zmuxbnh48jch_m24Z0pR4HVzTUnRUw&oe=662A12DA">
        </div>
        <div class="back">
        </div> 
    </div>
 <div class="forms">
        <div class="form-content" style="padding: 60px; padding-top: 120px;">
        <div class="password-reset-form">
            <div class="title">Quên mật khẩu</div>
            <!-- Thông báo hoặc hướng dẫn cho người dùng -->
            <p>Vui lòng nhập email khôi phục:</p>
            <form asp-controller="ForgotPassword" asp-action="ForgotPassword" method="post">
                <div class="input-boxes">
                    <div class="input-box">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="email" id="email" placeholder="Enter your email" required>
                    </div>
                    <!-- Button to submit email -->
                    <div class="button input-box">
                        <input type="submit" value="Send Reset OTP">
                    </div>
                    <div class="text sign-up-text">Nhớ mật khẩu? <label for="flip" style="cursor:pointer;">Đăng nhập ngay</label></div>
                </div>
            </form>
        </div>
    </div>
</div> 
</div>
 


@if (!string.IsNullOrEmpty(Model))
{
    <p>@Model</p>
}
