@model string // Model is expected to be the email address

@{
    ViewData["Title"] = "Verify OTP";
}

<h1>Verify OTP</h1>

<form method="post" action="/verify-otp">
    <input type="hidden" name="email" value="@Model" /> <!-- Hidden field to pass the email address -->

    <div class="form-group">
        <label for="otp">Enter OTP:</label>
        <input type="text" id="otp" name="inputOtp" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="password">New Password:</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!-- Display any error messages here -->
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
