<body>

    <div class="side-menu">
        <div class="brand-name">
            <h1>Brand</h1>
        </div>
        <ul>
            <li><a class="nav-link" asp-controller="Admin" asp-action="ListBookings">Lịch sử giao dịch</a></li>
            <li><a asp-controller="Admin" asp-action="MemberList"><img src="reading-book (1).png" alt="">&nbsp;<span>Danh sách khách hàng</span></a> </li>
            <li><a asp-controller="AmountTicket" asp-action="AmountTicket"><img src="teacher2.png" alt="">&nbsp;<span>Thống Kê</span></a> </li>
            <li>
                <a asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        </ul>
    </div>



    <div class="container">
        <div class="row">
            <div class="col-12 mb-3 mb-lg-5">
                <div style="padding-top: 20px;" class="overflow-hidden card table-nowrap table-card">
                    <div style="margin-left: 10px; " class="card-header d-flex justify-content-between align-items-center">
                        <form asp-action="MemberList" method="get">
                            <div class="input-group mb-3">
                                <input style="width: 300px; height: 30px;" type="text" class="form-control" placeholder="Tìm bằng tên hoặc cmnd" name="search">
                                <button style="height 20px" class="btn btn-outline-secondary" type="submit">Tìm Kiếm</button>
                                <a  style="height 20px" href="/Admin/AddUser" class="btn btn-primary">Thêm Khách Hàng</a>
                            </div>
                        </form>

                    </div>
                    <div class="table-responsive" style="padding-top: 48px;">
                        <table class="table mb-0" style="width: 100%;">
                            <thead class="small text-uppercase bg-body text-muted">
                                <tr>
                                    <th>Họ và tên</th>
                                    <th>Email</th>
                                    <th>Quê Quán</th>
                                    <th>Số điện thoại</th>
                                    <th>CMND</th>
                                    <th class="text-end"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model)
                                {
                                    <tr class="align-middle">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div>
                                                    <div class="h6 mb-0 lh-1">@member.FullName</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@member.Email</td>
                                        <td>@member.Address</td>
                                        <td>@member.Phone</td>
                                        <td>@member.CMND</td>
                                        <td class="text-end">
                                            <div class="dropdown">
                                                <a class="btn p-1" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-content" aria-labelledby="dropdownMenuLink">
                                                    <li><a class="dropdown-item" href="@Url.Action("UpdateUser", "Admin", new { ID = member.ID })">Update</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

