<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

<link rel="stylesheet" type="~/text/css" href="~/css/index.css" />
<!--carosel-->
<div id="demo" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#demo" data-slide-to="0" class="active"></li>
        <li data-target="#demo" data-slide-to="1"></li>
        <li data-target="#demo" data-slide-to="2"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/carousel4.jpeg" width="100%" height="400">
        </div>
        <div class="carousel-item">
            <img src="~/img/carousel2.jpg" width="100%" height="400">
        </div>
        <div class="carousel-item"> 
            <img src="~/img/carousel3.jpeg" width="100%" height="400">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a> 
</div>
<div class="tm-section tm-section-pad tm-bg-gray" id="tm-section-4">
    <div class="tm-bg-white ie-container-width-fix-2">
        <div class="container ie-h-align-center-fix">
            <div class="row">
                <div class="col-xs-12 ml-auto mr-auto ie-container-width-fix">
                    <form id="flightSearchForm" class="tm-search-form tm-section-pad-2">
                        <div class="form-group" style="height:100px">
                            <label for="departureAirport">Sân bay đi:</label>
                            <select class="form-control" id="departureAirport" name="departureAirport" style="padding-top: 8px;"></select>
                        </div>
                        <div class="form-group">
                            <label for="arrivalAirport">Sân bay đến:</label>
                            <select class="form-control" id="arrivalAirport" name="arrivalAirport" style="padding-top: 8px;"></select>
                        </div>
                        <div class="form-group">
                            <label for="departureTime">Thời gian khởi hành:</label>
                            <input type="datetime-local" class="form-control" id="departureTime" name="departureTime">
                        </div>
                        <button type="button" class="btn btn-primary search-btn" onclick="searchFlights()">Tìm kiếm</button>
                    </form>
                    <div class="form-group table-container">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Mã máy bay</th>
                                    <th scope="col">Tên sân bay cất cánh</th>
                                    <th scope="col">Tên sân bay hạ cánh</th>
                                    <th scope="col">Thời gian cất cánh</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody id="flightTableBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



